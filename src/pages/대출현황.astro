---
import Layout from '../layouts/Layout.astro';
import SubLayout from '../components/layout/SubLayout.astro';
import UiPagination from '../components/UI/UiPagination.astro';
import UiTable from '../components/UI/UiTable.astro';

const breadcrumbItems = [{ label: '홈', href: '/' }, { label: '도서검색', href: '/support' }, { label: '대출현황' }];

const columns = [
  { label: '도서명', key: 'title', align: 'left', headerAlign: 'center', width: 'auto', minWidth: '200px' },
  { label: '대출일', key: 'loanDate', align: 'center', headerAlign: 'center', width: '120px' },
  { label: '반납예정일', key: 'dueDate', align: 'center', headerAlign: 'center', width: '120px' },
  { label: '소장도서관', key: 'library', align: 'center', headerAlign: 'center', width: '180px' },
  { label: '상태', key: 'status', align: 'center', headerAlign: 'center', width: '80px' },
  { label: '반납연기', key: 'extend', type: 'button', align: 'center', headerAlign: 'center', width: '100px' },
];

const rows = [
  {
    index: 100,
    title: '(라임맘의 실패 없는) 아이주도 이유식 & 유아식',
    loanDate: '2025.05.01',
    dueDate: '2025.06.01',
    library: '옥련2동어린이작은도서관',
    status: '대출',
    extend: '예약하기',
  },
  {
    index: 99,
    title: '아이주도 이유식 유아식 매뉴얼 : 스스로, 그리고 함께하는 행복한 맘마',
    loanDate: '2025.05.01',
    dueDate: '2025.06.01',
    library: '옥련2동어린이작은도서관',
    status: '대출',
    extend: '예약하기',
  },
  {
    index: 98,
    title: '세상 편한 서현이네 유아 식판식 : 초보 엄마들도 쉽게 따라 할 수 있는 맞춤형 유아식',
    loanDate: '2025.05.01',
    dueDate: '2025.06.01',
    library: '옥련2동어린이작은도서관',
    status: '대출',
    extend: '예약하기',
  },
];
---

<Layout title="대출현황">
  <SubLayout title="대출현황" breadcrumbItems={breadcrumbItems} menuType="나의도서관">
    <div class="search-container">
      <!-- 스마트도서관 이용방법 인포박스 -->
      <div class="infobox infobox--secondary">
        <div class="infobox__header">
          <div class="infobox__icon">
            <img src="./assets/images/icon/figma_library.svg" alt="도서관" />
          </div>
          <h3 class="infobox__title">이용안내</h3>
        </div>
        <div class="infobox__content">
          <ul class="infobox__list">
            <li class="infobox__list-item mb-flex-col">
              <b>대출정지 : 반납기일을 초과하여 반납하였을 경우 초과(연체)된 일수만큼 대출 정지</b>
              <span>(한 도서관에서 대출이 정지되면 연수구 모든 도서관에서 대출 정지됨)</span>
            </li>
            <li class="infobox__list-item">반납연기는 다음 예약자가 없는 경우 1회 7일 연장가능(단, DVD는 연장 불가, 연속간행물은 전화신청 가능)</li>
            <li class="infobox__list-item">도서변상 : 대출도서의 분실 또는 훼손시에는 동일도서로 변상</li>
          </ul>
        </div>
      </div>

      <!-- 테이블 -->
      <div class="search-info-summary type2">
        총 <strong>190</strong>건 (<strong>1</strong> / 100)
      </div>

      <!-- 게시글 목록 -->
      <UiTable columns={columns} rows={rows} showIndex={true} caption="도서관 건의사항 목록" />

      <!-- 페이징네비게이션 -->
      <div class="pagination-section">
        <UiPagination currentPage={1} totalPages={10} maxVisiblePages={8} />
      </div>
    </div>
  </SubLayout>
</Layout>
