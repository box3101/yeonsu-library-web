---
import Layout from '@/layouts/Layout.astro';
import SubLayout from '@/components/layout/SubLayout.astro';
import { UiButton, UiInput, UiTextarea, UiSelect, UiDatePicker, UiRadio, UiTab } from '@components';

const breadcrumbItems = [{ label: '홈', href: '/' }, { label: '문화프로그램', href: '/' }, { label: '공연장 신청' }];

// 공연장 신청 탭 데이터
const hallApplicationTabs = [
	{ id: 'cheonghak', label: '청학', active: true },
	{ id: 'yeonsukkumdam', label: '연수꿈담' },
	{ id: 'songdo', label: '송도국제' },
	{ id: 'haedogi', label: '해돋이' },
	{ id: 'sunhak', label: '선학별빛' },
	{ id: 'hambakriyu', label: '함박비류' },
];
---

<Layout title="공연장 신청">
	<SubLayout title="공연장 신청" breadcrumbItems={breadcrumbItems} menuType="문화마당">
		<!-- 탭 네비게이션 -->
		<UiTab
			tabs={hallApplicationTabs}
			variant="default"
			size="medium"
			showCount={false}
			className="mb-4 search-type-tabs ui-tab--grid-5"
		/>

		<div class="ui-tab-panel ui-tab-panel--active" id="cheonghak">
			<div class="com-title-type2">
				<div class="com-title-type2__header">
					<h2>대관정보</h2>
				</div>
				<div class="com-title-type2__detail">
					<div class="com-title-type2__row">
						<div class="com-title-type2__column">
							<span class="com-title-type2__term">도서관</span>
							<span class="com-title-type2__description com-title-type2__description--primary">연수청학도서관</span>
						</div>
						<div class="com-title-type2__column">
							<span class="com-title-type2__term">희망날짜</span>
							<span class="com-title-type2__description">2025-08-18</span>
						</div>
					</div>
				</div>
			</div>

			<!-- 개인정보의 수집 이용 동의 -->
			<section class="privacy-section">
				<h3 class="section-title-type2">개인정보의 수집·이용 동의</h3>

				<!-- 개인정보 수집 이용 내용 박스 -->
				<div class="info-box">
					<div class="info-box__header">
						<div class="info-box__icon">
							<img src="./assets/images/icon/icon-square-filled.svg" alt="정보" />
						</div>
						<h4 class="info-box__title">개인정보의 수집 및 이용</h4>
					</div>
					<div class="info-box__content">
						<ol class="info-list">
							<li class="list-none">
								<strong>1. 개인정보의 수집ㆍ이용의 목적</strong>
								<p>
									<span class="text-primary">
										(동아리실 대관 업무, 공연장 대관 업무, 세미나실 대관 업무, 커뮤니티룸 대관 업무, 프로그램실 대관
										업무, 독서토론실 대관 업무, 하늘빛정원 대관 업무, 도서관 견학 업무, 문화행사 업무)
									</span>를 목적으로 개인정보를 수집ㆍ이용합니다.
								</p>
							</li>
							<li class="list-none">
								<strong>2. 수집하려는 개인정보의 항목</strong>
								<ul>
									<li>
										가. 필수항목 : <span class="text-primary">
											성명, 단체명, 소재지, 이동전화번호, 참여인원, 이메일
										</span>
									</li>
									<li>나. 선택항목 : <span class="text-primary">전화번호, 학교, 학년, 성별, 나이</span></li>
								</ul>
							</li>
							<li class="list-none">
								<strong>3. 개인정보의 보유 및 이용기간 : 1년</strong>
							</li>
						</ol>
					</div>
				</div>

				<!-- 동의 라디오 버튼 -->
				<div class="terms-item__radio flex-col items-end gap-15 mt15">
					<p class="radio-question">
						본인은 위 내용과 관련하여 「개인정보보호법」제15조 1항(개인정보의 수집․이용)에 의거하여 개인정보 제공이 아닌
						수집ㆍ이용에 동의합니다.
					</p>
					<div class="radio-group">
						<!-- 라디오 버튼 컨테이너 - 크기와 비활성화 상태에 따른 클래스 적용 -->
						<div class="ui-radio ui-radio--medium">
							<!-- 실제 라디오 버튼과 커스텀 디자인 요소를 포함하는 컨테이너 -->
							<div class="ui-radio__item">
								<!-- 숨겨진 실제 라디오 input 요소 -->
								<input
									type="radio"
									id="privacy-disagree"
									name="privacy-collection"
									value="disagree"
									class="ui-radio__input"
								/>
								<!-- 커스텀 라디오 버튼 디자인 컨테이너 -->
								<div class="ui-radio__control">
									<!-- 선택 시 표시될 내부 원형 도트 -->
									<div class="ui-radio__dot"></div>
								</div>
							</div>

							<label for="privacy-disagree" class="ui-radio__label">
								<span class="ui-radio__title">동의안함</span>
							</label>
						</div>
						<!-- 라디오 버튼 컨테이너 - 크기와 비활성화 상태에 따른 클래스 적용 -->
						<div class="ui-radio ui-radio--medium">
							<!-- 실제 라디오 버튼과 커스텀 디자인 요소를 포함하는 컨테이너 -->
							<div class="ui-radio__item">
								<!-- 숨겨진 실제 라디오 input 요소 -->
								<input
									type="radio"
									id="privacy-agree"
									name="privacy-collection"
									value="agree"
									class="ui-radio__input"
								/>
								<!-- 커스텀 라디오 버튼 디자인 컨테이너 -->
								<div class="ui-radio__control">
									<!-- 선택 시 표시될 내부 원형 도트 -->
									<div class="ui-radio__dot"></div>
								</div>
							</div>

							<label for="privacy-agree" class="ui-radio__label">
								<span class="ui-radio__title">동의함</span>
							</label>
						</div>
					</div>
				</div>
			</section>

			<!-- 신청자정보 폼 -->
			<section class="member-section">
				<h3 class="section-title">신청자정보</h3>

				<form action="">
					<div class="form-grid">
						<!-- 이름 -->
						<div class="form-field form-field--full">
							<label class="form-label required">이름</label>
							<UiInput placeholder="홍길동" value="홍길동" disabled size="large" class="w-140-mobile-full" />
						</div>

						<!-- 유선전화번호 -->
						<div class="form-field">
							<label class="form-label">유선전화번호</label>
							<UiInput placeholder="010-1234-4567" type="tel" size="large" />
						</div>

						<!-- 무선전화번호 -->
						<div class="form-field">
							<label class="form-label required">무선전화번호</label>
							<UiInput placeholder="010-1234-4567" type="tel" size="large" />
						</div>

						<!-- 단체/대표명 -->
						<div class="form-field">
							<label class="form-label required">단체/대표명</label>
							<UiInput placeholder="단체(대표)명을 입력해 주세요." size="large" />
						</div>

						<!-- 소재지 -->
						<div class="form-field form-field--span-2">
							<label class="form-label required">소재지</label>
							<UiInput placeholder="소재지를 입력해 주세요." size="large" />
						</div>

						<!-- 인원 선택 -->
						<div class="form-field">
							<label class="form-label required">인원</label>
							<UiSelect
								placeholder="선택"
								size="large"
								required
								options={[
									{ value: '10-20', label: '10~20명' },
									{ value: '20-30', label: '20~30명' },
									{ value: '30-40', label: '30~40명' },
									{ value: '40-50', label: '40~50명' },
								]}
							/>
						</div>

						<!-- 이메일 -->
						<div class="form-field">
							<label class="form-label required">이메일</label>
							<UiInput placeholder="이메일을 입력해 주세요." type="email" size="large" />
						</div>

						<!-- 공연,행사내용 -->
						<div class="form-field form-field--full">
							<label class="form-label required">공연,행사내용</label>
							<UiInput placeholder="제목을 입력해주세요." size="large" />
						</div>

						<!-- 인원 라디오 버튼 -->
						<div class="form-field form-field--full">
							<label class="form-label required">인원2</label>
							<div class="radio-group">
								<UiRadio
									name="participant_count"
									value="10-20"
									id="count-10-20"
									label="10~20명"
									size="medium"
									checked
								/>
								<UiRadio name="participant_count" value="20-30" id="count-20-30" label="20~30명" size="medium" />
								<UiRadio name="participant_count" value="30-40" id="count-30-40" label="30~40명" size="medium" />
							</div>
						</div>

						<!-- 희망시간 -->
						<div class="form-field">
							<div class="time-selection-group">
								<div class="time-selection-group__primary">
									<div class="form-field">
										<label class="form-label required">희망시간</label>
										<UiSelect
											placeholder="시작시간선택"
											size="large"
											options={[
												{ value: '09:00', label: '09:00' },
												{ value: '10:00', label: '10:00' },
												{ value: '11:00', label: '11:00' },
												{ value: '12:00', label: '12:00' },
												{ value: '13:00', label: '13:00' },
												{ value: '14:00', label: '14:00' },
												{ value: '15:00', label: '15:00' },
												{ value: '16:00', label: '16:00' },
												{ value: '17:00', label: '17:00' },
												{ value: '18:00', label: '18:00' },
											]}
										/>
									</div>
									<span class="time-selection-group__separator">~</span>
									<UiSelect
										placeholder="종료시간선택"
										size="large"
										options={[
											{ value: '10:00', label: '10:00' },
											{ value: '11:00', label: '11:00' },
											{ value: '12:00', label: '12:00' },
											{ value: '13:00', label: '13:00' },
											{ value: '14:00', label: '14:00' },
											{ value: '15:00', label: '15:00' },
											{ value: '16:00', label: '16:00' },
											{ value: '17:00', label: '17:00' },
											{ value: '18:00', label: '18:00' },
											{ value: '19:00', label: '19:00' },
										]}
									/>
								</div>
							</div>
						</div>

						<!-- 행사 내용 -->
						<div class="form-field">
							<div class="time-selection-group__secondary">
								<div class="form-field">
									<label class="form-label">희망시간2</label>
									<UiSelect
										placeholder="시작시간선택"
										size="large"
										options={[
											{ value: '09:00', label: '09:00' },
											{ value: '10:00', label: '10:00' },
											{ value: '11:00', label: '11:00' },
											{ value: '12:00', label: '12:00' },
											{ value: '13:00', label: '13:00' },
											{ value: '14:00', label: '14:00' },
											{ value: '15:00', label: '15:00' },
											{ value: '16:00', label: '16:00' },
											{ value: '17:00', label: '17:00' },
											{ value: '18:00', label: '18:00' },
										]}
									/>
								</div>
							</div>
						</div>
					</div>
				</form>
			</section>

			<!-- 버튼 영역 -->
			<div class="signup-form__actions">
				<UiButton variant="darkGray" size="large" text="취소" class="w-180-mobile-full" />
				<UiButton variant="primary" size="large" text="신청" class="w-180-mobile-full" />
			</div>
		</div>
	</SubLayout>
</Layout>
