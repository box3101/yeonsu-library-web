---
import Layout from '@/layouts/Layout.astro';
import SubLayout from '@/components/layout/SubLayout.astro';
import { UiButton, UiInput, UiSelect, UiRadio, UiCheckbox } from '@components';

const breadcrumbItems = [
  { label: '홈', href: '/' },
  { label: '회원서비스', href: '/member' },
  { label: '회원가입', href: '/회원가입' },
  { label: '해당유형 선택', href: '/회원가입-해당유형' },
  { label: '이용약관 동의', href: '/회원가입-이용약관' },
  { label: '본인인증', href: '/회원가입-본인인증' },
  { label: '대출자정보' },
];
---

<Layout title="회원가입 - 대출자정보">
  <SubLayout title="회원가입" breadcrumbItems={breadcrumbItems} menuType="회원서비스">
    <div class="sub-layout__content">
      <div class="sub-layout__content-inner">
        <div class="sub-layout__content-inner-body">
          <div class="sub-layout__content-inner-body-item">
            <!-- 대출자정보 섹션 -->
            <div class="signup-form">
              <!-- 폼 컨테이너 -->
              <div class="signup-form__content">
                <!-- 회원정보확인 섹션 -->
                <section class="member-verification-section">
                  <h2 class="section-title">회원정보확인</h2>

                  <div class="verification-form-box">
                    <div class="form-grid-wrp">
                      <!-- 성명 -->
                      <div class="form-field">
                        <label class="form-label required">성명</label>
                        <UiInput placeholder="홍길동" size="large" value="홍길동" />
                      </div>

                      <!-- 대출자번호 -->
                      <div class="form-field">
                        <label class="form-label required">대출자번호</label>
                        <div class="input-with-button">
                          <UiInput placeholder="홍길동" size="large" value="홍길동" />
                          <UiButton variant="tertiary" size="large" text="I-PIN 인증" disabled />
                        </div>
                      </div>

                      <!-- 카드 비밀번호 -->
                      <div class="form-field">
                        <label class="form-label required">카드 비밀번호</label>
                        <UiInput type="password" placeholder="홍길동" size="large" value="홍길동" />
                      </div>
                    </div>
                  </div>

                  <!-- 다음 버튼 -->
                  <div class="verification-actions">
                    <UiButton
                      variant="secondary"
                      size="large"
                      text="다음"
                      icon="icon-arrow-right"
                      iconPosition="right"
                      iconAddClass="icon icon-xxxsm icon-primary"
                      class="w-180"
                    />
                  </div>
                </section>

                <!-- 가입정보입력 섹션 -->
                <section class="member-section">
                  <h2 class="section-title">가입정보입력</h2>

                  <!-- 입력안내 박스 -->
                  <div class="info-box">
                    <div class="info-box__header">
                      <div class="info-box__icon">
                        <img src="./assets/images/icon/icon-info.svg" alt="정보" />
                      </div>
                      <h4 class="info-box__title">입력안내</h4>
                    </div>
                    <div class="info-box__content">
                      <ul class="info-list">
                        <li>아이디는 영문자 조합 또는 영문/숫자 조합으로 4~15자로 입력해주세요.</li>
                        <li>비밀번호는 영문자, 숫자, 특수문자를 1개 이상 포함하여 9~15자리로 입력해주세요. (※ 특수기호 '#','^' 제외)</li>
                      </ul>
                    </div>
                  </div>

                  <div class="form-grid form-grid--single">
                    <!-- 아이디 -->
                    <div class="form-field">
                      <label class="form-label required">아이디</label>
                      <div class="input-with-button">
                        <UiInput placeholder="영문 소문자" size="large" />
                        <UiButton variant="tertiary" size="large" text="중복확인" disabled />
                      </div>
                    </div>

                    <!-- 비밀번호 -->
                    <div class="form-field">
                      <label class="form-label required">비밀번호</label>
                      <UiInput type="password" placeholder="10-16자의 영문자, 숫자, 특수문자 조합" size="large" />
                    </div>

                    <!-- 비밀번호 확인 -->
                    <div class="form-field">
                      <label class="form-label required">비밀번호 확인</label>
                      <UiInput type="password" placeholder="10-16자의 영문자, 숫자, 특수문자 조합" size="large" />
                    </div>
                  </div>
                </section>
              </div>

              <!-- 버튼 영역 -->
              <div class="signup-form__actions">
                <UiButton variant="primary" size="large" text="가입하기" class="w-180" href="/회원가입-완료" />
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </SubLayout>
</Layout>
