---
import Layout from '@/layouts/Layout.astro';
import SubLayout from '@/components/layout/SubLayout.astro';
import { UiPagination, UiTable, UiSelect, UiButton, UiDatePicker } from '@components';

const breadcrumbItems = [{ label: '홈', href: '/' }, { label: '도서검색', href: '/support' }, { label: '대출 이력' }];

const columns = [
  { label: '도서명', key: 'title', align: 'left', headerAlign: 'center', width: 'auto', minWidth: '200px' },
  { label: '저자', key: 'author', align: 'center', headerAlign: 'center', width: '120px' },
  { label: '발행처', key: 'publisher', align: 'center', headerAlign: 'center', width: '120px' },
  { label: '소장도서관', key: 'library', align: 'center', headerAlign: 'center', width: '150px' },
  { label: '신청상태', key: 'status', align: 'center', headerAlign: 'center', width: '100px' },
  { label: '취소사유', key: 'cancelReason', align: 'center', headerAlign: 'center', width: '100px' },
  { label: '신청취소', key: 'cancel', align: 'center', headerAlign: 'center', width: '110px', type: 'button' },
];

const rows = [
  {
    index: 100,
    title: '(라임맘의 실패 없는) 아이주도 이유식 & 유아식',
    author: '2025.05.01',
    publisher: '2025.06.01',
    library: '옥련2동어린이작은도서관',
    status: '신청',
    cancelReason: '이용자취소',
    cancel: '취소하기',
  },
  {
    index: 99,
    title: '아이주도 이유식 유아식 매뉴얼 : 스스로, 그리고 함께하는 행복한 맘마',
    author: '2025.05.01',
    publisher: '2025.06.01',
    library: '옥련2동어린이작은도서관',
    status: '반납',
    cancelReason: '반납',
    cancel: {
      text: '취소불가',
      variant: 'default',
      disabled: true,
    },
  },
  {
    index: 98,
    title: '세상 편한 서현이네 유아 식판식 : 초보 엄마들도 쉽게 따라 할 수 있는 맞춤형 유아식',
    author: '2025.05.01',
    publisher: '2025.06.01',
    library: '옥련2동어린이작은도서관',
    status: '반납',
    cancelReason: '반납',
    cancel: {
      text: '취소불가',
      variant: 'default',
      disabled: true,
    },
  },
];
---

<Layout title="희망도서신청현황">
  <SubLayout title="희망도서신청현황" breadcrumbItems={breadcrumbItems}>
    <div class="search-container">
      <div class="search-info-summary flex justify-between items-center">
        <div class="search-info-summary type2 mt0">
          총 <strong>190</strong>건 (<strong>1</strong> / 100)
        </div>
        <div class="filter-actions flex gap-6 items-center">
          <UiDatePicker name="publication-year" startYear="2020" endYear="2024" placeholder="발행년도를 선택해주세요" value="" id="" class="w-100-mobile-full" disabled={false} />
          <UiButton variant="primary" text="엑셀 다운로드" iconPosition="left" icon="icon-excel" class="w-170-mobile-full" />
        </div>
      </div>

      <!-- 게시글 목록 -->
      <UiTable columns={columns} rows={rows} showIndex={true} caption="도서관 건의사항 목록" />

      <!-- 페이징네비게이션 -->
      <div class="pagination-section">
        <UiPagination currentPage={1} totalPages={10} maxVisiblePages={8} />
      </div>
    </div>
  </SubLayout>
</Layout>
