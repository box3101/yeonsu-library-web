---
import Layout from '../layouts/Layout.astro';
import SubLayout from '../components/layout/SubLayout.astro';
import UiPagination from '../components/UI/UiPagination.astro';
import UiInput from '../components/UI/UiInput.astro';
import UiButton from '../components/UI/UiButton.astro';
import UiSelect from '../components/UI/UiSelect.astro';

const breadcrumbItems = [
	{ label: '홈', href: '/' },
	{ label: '기타', href: '/etc' },
	{ label: "도서관 고양이 '관이'의 하루", href: '/도서관고양이관이의하루' },
];

// 검색 필터 옵션
const filterOptions = [
	{ value: '', label: '제목' },
	{ value: 'date', label: '날짜' },
	{ value: 'category', label: '카테고리' },
];
---

<Layout title="도서관 고양이 '관이'의 하루">
	<SubLayout title="도서관 고양이 '관이'의 하루" breadcrumbItems={breadcrumbItems} menuType="기타">
		<div class="library-cat-page">
			<!-- 도서관 고양이 '관이'와의 인연 섹션 -->
			<section class="cat-story-section">
				<div class="usage-guide">
					<h2 class="usage-guide__title">도서관 고양이 <span class="highlight">‘관이’</span>와의 인연</h2>
				</div>
				<ul class="com-grid com-grid-4">
					<li class="com-grid-item">
						<a href="#">
							<div class="image h-lg">
								<img src="./assets/images/cat-story-1.jpg" alt="관이와 다른 고양이들" />
							</div>
						</a>
					</li>
					<li class="com-grid-item">
						<a href="#">
							<div class="image h-lg">
								<img src="./assets/images/cat-story-2.jpg" alt="도서관 내부 모습" />
							</div>
						</a>
					</li>
					<li class="com-grid-item">
						<a href="#">
							<div class="image h-lg">
								<img src="./assets/images/cat-story-3.jpg" alt="관이의 모습" />
							</div>
						</a>
					</li>
					<li class="com-grid-item">
						<a href="#">
							<div class="image h-lg">
								<img src="./assets/images/cat-story-4.jpg" alt="도서관에서 책을 읽는 관이" />
							</div>
						</a>
					</li>
				</ul>
			</section>

			<!-- 도서관 고양이 '관이'의 활약상 섹션 -->
			<section class="cat-activities-section">
				<div class="usage-guide">
					<h2 class="usage-guide__title">도서관 고양이 <span class="highlight">'관이'</span>의 활약상</h2>
				</div>

				<!-- 검색 및 필터 영역 -->
				<div class="com-search">
					<div class="com-search__filters">
						<div class="com-search__select">
							<UiSelect options={[{ value: '', label: '제목' }]} name="library" size="medium" variant="default" />
						</div>
						<div class="com-search__input">
							<UiInput placeholder="검색어를 입력해주세요." />
						</div>
						<div class="com-search__button">
							<UiButton text="검색" class="w-100-mobile-full" />
						</div>
					</div>
				</div>

				<!-- 결과 카운트 -->
				<div class="bbs-total mb40">
					총 <strong class="text-primary">459</strong>건 ( <strong class="text-primary">1</strong> / 46 )
				</div>

				<!-- 사진 갤러리 그리드 -->
				<ul class="com-grid com-grid-5">
					<li class="com-grid-item">
						<a href="#">
							<div class="image h-xlg">
								<img src="./assets/images/activity-1.jpg" alt="관이의 뽀뽀뽀뽀 뽀뽀뽀" />
							</div>
							<p class="title">관이의 뽀뽀뽀뽀 뽀뽀뽀</p>
						</a>
					</li>
					<li class="com-grid-item">
						<a href="#">
							<div class="image h-xlg">
								<img src="./assets/images/activity-2.jpg" alt="관이의 북페" />
							</div>
							<p class="title">관이의 북페</p>
						</a>
					</li>
					<li class="com-grid-item">
						<a href="#">
							<div class="image h-xlg">
								<img src="./assets/images/activity-3.jpg" alt="송도5동 작은도서관 개관" />
							</div>
							<p class="title">송도5동 작은도서관 개관</p>
						</a>
					</li>
					<li class="com-grid-item">
						<a href="#">
							<div class="image h-xlg">
								<img src="./assets/images/activity-4.jpg" alt="솔안광장으로 오세요" />
							</div>
							<p class="title">솔안광장으로 오세요</p>
						</a>
					</li>
					<li class="com-grid-item">
						<a href="#">
							<div class="image h-xlg">
								<img src="./assets/images/activity-5.jpg" alt="a4용지 박스와 관이" />
							</div>
							<p class="title">a4용지 박스와 관이</p>
						</a>
					</li>
					<li class="com-grid-item">
						<a href="#">
							<div class="image h-xlg">
								<img src="./assets/images/activity-6.jpg" alt="졸고있는 고양이" />
							</div>
							<p class="title">졸고있는 관이</p>
						</a>
					</li>
					<li class="com-grid-item">
						<a href="#">
							<div class="image h-xlg">
								<img src="./assets/images/activity-7.jpg" alt="신간도서 입고 알림" />
							</div>
							<p class="title">신간도서 입고 알림</p>
						</a>
					</li>
					<li class="com-grid-item">
						<a href="#">
							<div class="image h-xlg">
								<img src="./assets/images/activity-8.jpg" alt="북콘서트 홍보오시요" />
							</div>
							<p class="title">북콘서트 홍보</p>
						</a>
					</li>
					<li class="com-grid-item">
						<a href="#">
							<div class="image h-xlg">
								<img src="./assets/images/activity-9.jpg" alt="밤 업무 후 쉬신한 고양이" />
							</div>
							<p class="title">밤 업무 후 쉬신한 고양이</p>
						</a>
					</li>
					<li class="com-grid-item">
						<a href="#">
							<div class="image h-xlg">
								<img src="./assets/images/activity-10.jpg" alt="도서관 휴관날이" />
							</div>
							<p class="title">도서관 휴관날이</p>
						</a>
					</li>
				</ul>

				<!-- 페이지네이션 -->
				<UiPagination currentPage={1} totalPages={46} maxVisiblePages={8} className="cat-activities-pagination" />
			</section>
		</div>
	</SubLayout>
</Layout>
