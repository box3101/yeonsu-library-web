---
import Layout from '../layouts/Layout.astro';
import UiRadio from '../components/UI/UiRadio.astro';  // 경로 수정
---

<Layout title="UiRadio 컴포넌트 데모">
  <main>
    <div class="container">
      <h1>UiRadio 컴포넌트 데모</h1>

      <section>
        <h2>Large 크기 - 기본 상태</h2>
        <div class="demo-group">
          <UiRadio
            name="large-demo"
            value="option1"
            size="large"
            label="라디오버튼"
            description="부가적인 설명이 들어갑니다."
          />
          <UiRadio
            name="large-demo"
            value="option2"
            size="large"
            checked
            label="라디오버튼"
            description="부가적인 설명이 들어갑니다."
          />
        </div>
      </section>

      <section>
        <h2>Large 크기 - 비활성화 상태</h2>
        <div class="demo-group">
          <UiRadio
            name="large-disabled"
            value="option1"
            size="large"
            disabled
            label="라디오버튼"
            description="부가적인 설명이 들어갑니다."
          />
          <UiRadio
            name="large-disabled"
            value="option2"
            size="large"
            checked
            disabled
            label="라디오버튼"
            description="부가적인 설명이 들어갑니다."
          />
        </div>
      </section>

      <section>
        <h2>Medium 크기 - 기본 상태</h2>
        <div class="demo-group">
          <UiRadio
            name="medium-demo"
            value="option1"
            size="medium"
            label="라디오버튼"
            description="부가적인 설명이 들어갑니다."
          />
          <UiRadio
            name="medium-demo"
            value="option2"
            size="medium"
            checked
            label="라디오버튼"
            description="부가적인 설명이 들어갑니다."
          />
        </div>
      </section>

      <section>
        <h2>Medium 크기 - 비활성화 상태</h2>
        <div class="demo-group">
          <UiRadio
            name="medium-disabled"
            value="option1"
            size="medium"
            disabled
            label="라디오버튼"
            description="부가적인 설명이 들어갑니다."
          />
          <UiRadio
            name="medium-disabled"
            value="option2"
            size="medium"
            checked
            disabled
            label="라디오버튼"
            description="부가적인 설명이 들어갑니다."
          />
        </div>
      </section>

      <section>
        <h2>라벨 없이 사용</h2>
        <div class="demo-group">
          <UiRadio name="no-label" value="option1" size="large" />
          <UiRadio name="no-label" value="option2" size="medium" checked />
        </div>
      </section>
    </div>
  </main>
</Layout>

<style>
  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
  }

  section {
    margin-bottom: 3rem;
  }

  h1 {
    font-size: 2rem;
    margin-bottom: 2rem;
    color: #131416;
  }

  h2 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: #131416;
  }

  .demo-group {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    max-width: 320px;
  }
</style>
