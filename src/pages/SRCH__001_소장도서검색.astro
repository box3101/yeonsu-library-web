---
import Layout from '@/layouts/Layout.astro';
import SubLayout from '@/components/layout/SubLayout.astro';
import { UiLibraryFilter } from '@components';

const breadcrumbItems = [
  { label: '홈', href: '/' },
  { label: '도서검색', href: '/support' },
  { label: '소장도서검색' },
];

// 도서관 데이터 정의
const libraries = [
  { id: 'cheonghak', name: '연수청학도서관', checked: true },
  { id: 'kkummaru', name: '연수꿈마루도서관', checked: false },
  { id: 'songdo-kids', name: '송도국제어린이도서관', checked: false },
  { id: 'haedoji', name: '해돋이도서관', checked: false },
  { id: 'sunhak', name: '선학별빛도서관', checked: true },
  { id: 'dongchun', name: '동춘나래도서관', checked: false },
  { id: 'hambak', name: '함박마루도서관', checked: false },
  { id: 'oknyon1', name: '옥련1동책뜰도서관', checked: false },
  { id: 'yeongeon2', name: '연건2동어린이작은도서관', checked: true },
  { id: 'yeonsu1', name: '연수1동작은도서관', checked: false },
  { id: 'songdo2', name: '송도2동작은도서관', checked: false },
];
---

<Layout title="소장도서검색 - 연수구립도서관">
  <SubLayout title="소장도서검색" breadcrumbItems={breadcrumbItems}>
    <!-- 도서관 필터 섹션 -->
    <UiLibraryFilter 
      title="전체도서관"
      subtitle="도서관 분류"
      libraries={libraries}
      gridColumns={4}
      expanded={true}
    />
  </SubLayout>
</Layout>
