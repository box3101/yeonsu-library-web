---
import Layout from '@/layouts/Layout.astro';
import SubLayout from '@/components/layout/SubLayout.astro';
import UiButton from '@/components/UI/UiButton.astro';

const title = '상호대차서비스';
const description = '연수구립도서관 상호대차서비스 페이지입니다.';

const breadcrumbItems = [
	{ text: '홈', link: '/' },
	{ text: '안내마당', link: '#' },
	{ text: '상호대차서비스', link: '#' },
];

const processingTime = [
	{ library: '인천광역시교육청 소속 공공도서관', time: '2일' },
	{ library: '인천광역시 소속 공공도서관', time: '2일' },
	{ library: '그 외 공공도서관', time: '7일' },
];
---

<Layout title={title} description={description}>
	<SubLayout title={title} breadcrumbItems={breadcrumbItems} menuType="도서서비스">
		<div class="sub-layout__content">
			<section class="sub-layout__content-inner">
				<!-- 안내 공지 -->
				<div class="info-notice program-notice">
					<div class="info-notice__header">
						<div class="info-notice__icon">
							<img src="./assets/images/icon/icon-info.svg" alt="안내" class="icon icon-sm" />
						</div>
						<h3 class="info-notice__title">상호대차란?</h3>
					</div>
					<div class="program-notice__content">
						<ul class="program-notice__list">
							<li>
								이용자가 원하는 자료가 이용하려는 공공도서관에는 없고 다른 연수구립도서관에 비치되어 있는 경우 원하는
								도서관으로 신청하여 대출할 수 있도록 해주는 도서관 자료 공동 활용 서비스(원하는 자료가 수령도서관에서
								대출 가능한 경우 신청 불가)
							</li>
						</ul>
					</div>
				</div>

				<!-- 참여 도서관 : 연수구립도서관 20개관(2025. 6월 기준) -->
				<div class="mt24">
					<h3 class="usage-guide__title">참여 도서관 : 연수구립도서관 20개관(2025. 6월 기준)</h3>
