const columns = [
	{ key: 'number', label: '번호', width: '60', headerAlign: 'center', align: 'center' },
	{ key: 'institution', label: '기관', width: '160', headerAlign: 'center', align: 'center' },
	{ key: 'title', label: '기증자/처', width: 'auto', headerAlign: 'center', align: 'left' },
	{ key: 'applicationDate', label: '신청일', width: '100', headerAlign: 'center', align: 'center' },
	{ key: 'status', label: '신청상태', width: '100', headerAlign: 'center', align: 'center' },
];
