---
import Layout from '@/layouts/Layout.astro';
import SubLayout from '@/components/layout/SubLayout.astro';
import {
	UiButton,
	UiInput,
	UiTextarea,
	UiSelect,
	UiDatePicker,
	UiRadio,
	UiTab,
	CardTable,
	UiTable,
	UiPagination,
} from '@components';

const breadcrumbItems = [{ label: '홈', href: '/' }, { label: '문화프로그램', href: '/' }, { label: '서약서작성' }];

const tabMenus = [
	{ id: 'info', label: '기증안내', href: './기증안내' },
	{ id: 'pledge', label: '서약서작성', href: './기증안내-서약서작성' },
	{ id: 'apply', label: '기증신청조회', active: true, href: './기증안내-기증신청조회' },
