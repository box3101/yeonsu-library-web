---
import Layout from '@/layouts/Layout.astro';
import SubLayout from '@/components/layout/SubLayout.astro';
import { UiButton, UiInput, UiRadio } from '@components';

const breadcrumbItems = [
	{ label: '홈', href: '/' },
	{ label: '나의도서관', href: '/나의도서관' },
	{ label: '내정보', href: '/내정보' },
	{ label: '정회원 인증' },
];
---

<Layout title="내정보 - 정회원 인증">
	<SubLayout title="정회원 인증" breadcrumbItems={breadcrumbItems} menuType="나의도서관">
		<div class="sub-layout__content">
			<div class="sub-layout__content-inner">
				<div class="sub-layout__content-inner-body">
					<div class="sub-layout__content-inner-body-item">
						<!-- 정회원 인증 폼 -->
						<div class="verification-form">
							<!-- 개인정보 수집 및 이용 동의 섹션 -->
							<div class="verification-section">
								<div class="info-box">
									<div class="info-box__header">
										<div class="info-box__icon">
											<img src="./assets/images/icon/icon-info.svg" alt="정보 아이콘" />
										</div>
										<h3 class="info-box__title">개인정보의 수집 및 이용</h3>
									</div>

									<div class="info-box__content">
										<ul class="info-list">
											<li>제공기관 : 행정안전부 행정정보공동이용</li>
											<li>제공정보 : 주민등록번호</li>
											<li>제공목적 : 비대면 자격확인을 통한 정회원 가입 (인천광역시 거주 여부 확인)</li>
											<li>
												제공정보 보유 및 이용기간 : <span class="text-red">자격확인 후 즉시 파기</span>
											</li>
											<li class="info-note">
												위의 개인정보 수집 및 이용에 대한 동의를 거부할 권리가 있습니다. 그러나 거부 시 서비스 이용에 제한을 받을 수 있습니다.
											</li>
										</ul>
									</div>
								</div>

								<!-- 동의 여부 선택 -->
								<div class="verification-radio">
									<p class="verification-radio__question">[필수] 위와 같이 개인정보를 수집 및 이용하는데 동의하십니까?</p>
									<div class="radio-group">
										<UiRadio name="privacy-consent" value="disagree" id="privacy-disagree" label="동의안함" size="medium" />
										<UiRadio name="privacy-consent" value="agree" id="privacy-agree" label="동의함" size="medium" checked />
									</div>
								</div>
							</div>

							<!-- 회원 정보 확인 섹션 -->
							<div class="verification-section verification-section--info">
								<div class="member-info">
									<div class="member-info__row">
										<div class="member-info__label">성명</div>
										<div class="member-info__value">홍길동</div>
									</div>

									<div class="member-info__row">
										<div class="member-info__label">아이디</div>
										<div class="member-info__value">ecotest</div>
									</div>

									<div class="member-info__row">
										<div class="member-info__label">주민등록번호</div>
										<div class="member-info__input-group">
											<UiInput type="text" placeholder="20250101" value="20250101" size="medium" width="140" />
											<span class="input-separator">—</span>
											<UiInput type="password" placeholder="1111111" value="1111111" size="medium" width="140" />
										</div>
									</div>
								</div>
							</div>

							<!-- 인증하기 버튼 -->
							<div class="verification-actions">
								<UiButton text="인증하기" variant="primary" size="large" class="w-180-mobile-full" />
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</SubLayout>
</Layout>
