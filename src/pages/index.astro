    </section>
    <!-- // 공지사항, 자주 찾는 페이지 -->

    <!-- 문화행사, 프로그램, 영화상영 -->
    <section class="event-section">
      <div class="container">
        <div class="event-section__left">
          <div class="event-section__header flex justify-between items-center">
            <!-- 공통탭 -->
            <UiTab tabs={eventTabs} className="event-section__tabs" />
            <!-- 공통탭 EEE-->
            <button class="com-more-btn">
              <span>더보기</span>
              <svg class="com-more-btn__icon" viewBox="0 0 24 24" fill="none">
                <path d="M12 5V19M5 12L19 12" stroke="currentColor" stroke-width="2" stroke-linecap="round"></path>
              </svg>
            </button>
          </div>
          <!-- 탭 컨텐츠 영역 -->
          <div class="event-section__content">
            <!-- 문화행사 탭 패널 -->
            <div id="panel-culture" class="ui-tab-panel ui-tab-panel--active">
              <div class="event-section__filter flex justify-between items-center" data-aos="fade-up" data-aos-duration="500">
                <UiSelect name="library-filter" options={selectOptions} value="all" class="w-180" />
                <div class="event-section__nav flex items-center gap-4">
                  <UiNavButton class="event-swiper-btn-prev" direction="prev" size={40} ariaLabel="이전 이벤트" />
                  <UiNavButton class="event-swiper-btn-next" direction="next" size={40} ariaLabel="다음 이벤트" />
                </div>
              </div>

              <!-- 이벤트 카드 스와이퍼 -->
              <div class="event-section__swiper" data-aos="fade-up" data-aos-duration="500">
                <div class="swiper event-swiper">
                  <div class="swiper-wrapper">
                    {
                      eventGroups.map((group, groupIndex) => (
                        <div class="swiper-slide">
                          <ul class="event-cards">
                            {group.map((card, cardIndex) => (
                              <li class="event-card" key={`${groupIndex}-${cardIndex}`}>
                                <a href="#" class="event-card__link">
                                  <div class="event-card__tag" style={`background-color: ${card.tagColor}`}>
                                    {card.tag}
                                  </div>
                                  <div class="event-card__content">
                                    <h4 class="event-card__title">{card.title}</h4>
                                    <div class="event-card__info">
                                      <div class="event-card__info-left">
                                        <div class="event-card__info-item">
                                          <span class="event-card__label">교육기간</span>
                                          <span class="event-card__value">{card.educationPeriod}</span>
                                        </div>
                                        <div class="event-card__info-item">
                                          <span class="event-card__label">모집인원</span>
                                          <span class="event-card__value">
                                            <span class="event-card__highlight">{card.enrollment.current}</span>/{card.enrollment.total}
                                            {card.enrollment.status || ''}
                                          </span>
                                        </div>
                                      </div>
                                      <div class="event-card__info-right">
                                        <div class="event-card__info-item">
                                          <span class="event-card__label">접수기간</span>
                                          <span class="event-card__value">{card.applicationPeriod}</span>
                                        </div>
                                        <div class="event-card__info-item">
                                          <span class="event-card__label">예비인원</span>
                                          <span class="event-card__value">
                                            <span class="event-card__highlight">{card.waitlist.current}</span>/{card.waitlist.total}
                                          </span>
                                        </div>
                                      </div>
                                    </div>
                                  </div>
                                </a>
                              </li>
                            ))}
                          </ul>
                        </div>
                      ))
                    }
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- 우측 신규 컨텐츠 바로가기 -->
        <div class="event-section__right">
          <!-- 신규 컨텐츠 바로가기 -->
          <div class="new-content-shortcuts">
            <h3 class="new-content-shortcuts__title">신규 컨텐츠 바로가기</h3>
            <div class="new-content-shortcuts__grid" data-aos="fade-up" data-aos-duration="500">
              {
                newContentItems.map(item => (
                  <a href={item.link} class="new-content-item" style={`background-color: ${item.backgroundColor}`}>
                    <div class="new-content-item__image">
                      <img src={item.image} alt={item.title} />
                    </div>
                    <div class="new-content-item__content">
                      <h4 class="new-content-item__title" style="white-space: pre-line; text-align: right;" set:html={item.title} />
                      <div class="new-content-item__arrow">
                        <img src="./assets/images/icon/icon-arr-right.svg" alt="arrow-right" />
                      </div>
                    </div>
                  </a>
                ))
              }
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- 연수구도서관 한눈에 보기, 도서관 이용시간 -->
    <section class="info-section">
      <div class="inner">
        <div class="info-section__content">
          <div class="info-section__map-area left">
            <div class="info-section__header">
              <div class="info-section__left">
                <h2 class="info-section__title">
                  연수구도서관 <span>한눈에 보기</span>
                </h2>
                <UiSelect
                  name="library-select"
                  options={[
                    { value: 'yeonsu', label: '연수청학도서관' },
                    { value: 'ggumdan', label: '연수꿈단도서관' },
                    { value: 'songdo', label: '송도국제어린이도서관' },
                  ]}
                  value="yeonsu"
                  class="w-180"
                />
              </div>
            </div>
            <!-- 지도 영역 -->
            <div class="library-map" data-aos="fade-up" data-aos-duration="500">
              <img src="/assets/images/building-image.png" alt="연수구 도서관 지도" class="library-map__image" />
            </div>
          </div>
          <div class="info-section__right-area">
            <div class="info-section__right">
              <h2 class="info-section__title">
                도서관 <span>이용시간</span>
              </h2>
              <UiButton text="도서관 소개 바로가기" variant="darkBlue" size="large" width="250px" icon="icon-arr-right-white" iconPosition="right" />
            </div>
            <div class="info-section__schedule-area" data-aos="fade-up" data-aos-duration="500">
              <!-- 휴관일 안내 -->
              <div class="holiday-notice flex justify-between items-center">
                <div class="holiday-notice__left flex gap-2 items-center">
                  <div class="holiday-notice__icon">
                    <i class="icon icon-md icon-dete"></i>
                  </div>
                  <span class="holiday-notice__text">휴관일 안내</span>
                </div>
                <div class="holiday-notice__legends">
                  <div class="holiday-notice__legend">
                    <div class="holiday-notice__dot holiday-notice__dot--red"></div>
                    <span>법정공휴일</span>
                  </div>
                  <div class="holiday-notice__legend">
                    <div class="holiday-notice__dot holiday-notice__dot--orange"></div>
                    <span>정기휴관</span>
                  </div>
                  <div class="holiday-notice__legend">
                    <div class="holiday-notice__dot holiday-notice__dot--gray"></div>
                    <span>개관일</span>
                  </div>
                </div>
              </div>
              <!-- 캘린더 -->
              <div class="calendar">
                <div class="calendar__header">
                  <UiNavButton direction="prev" size={40} ariaLabel="이전 달" />
