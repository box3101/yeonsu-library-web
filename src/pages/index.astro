                    <div class="calendar__day calendar__day--open">13</div>
                    <div class="calendar__day calendar__day--open">14</div>
                    <div class="calendar__day calendar__day--open">15</div>
                    <div class="calendar__day calendar__day--open">16</div>
                    <div class="calendar__day calendar__day--open">17</div>
                    <div class="calendar__day calendar__day--open">18</div>
                    <div class="calendar__day calendar__day--closed">19</div>
                    <div class="calendar__day calendar__day--open">20</div>
                    <div class="calendar__day calendar__day--open">21</div>
                    <div class="calendar__day calendar__day--open">22</div>
                    <div class="calendar__day calendar__day--open">23</div>
                    <div class="calendar__day calendar__day--today">24</div>
                    <div class="calendar__day calendar__day--open">25</div>
                    <div class="calendar__day calendar__day--closed">26</div>
                    <div class="calendar__day calendar__day--open">27</div>
                    <div class="calendar__day calendar__day--open">28</div>
                    <div class="calendar__day calendar__day--open">29</div>
                    <div class="calendar__day calendar__day--open">30</div>
                    <div class="calendar__day calendar__day--open">31</div>
                  </div>
                </div>
              </div>

              <!-- 이용시간 스와이퍼 -->
              <div class="library-hours">
                <div class="holiday-notice__left flex gap-2 items-center">
                  <div class="holiday-notice__icon">
                    <i class="icon icon-md icon-calendar"></i>
                  </div>
                  <span class="holiday-notice__text">이용시간</span>
                </div>

                <!-- 스와이퍼 컨테이너 -->
                <div class="library-hours-swiper swiper">
                  <div class="swiper-wrapper">
                    {
                      libraryHours.map((page, pageIndex) => (
                        <div class="swiper-slide">
                          <div class="library-hours__grid">
                            {page.sections.map((section, sectionIndex) => (
                              <div class="library-hours__section" key={`${pageIndex}-${sectionIndex}`}>
                                <h5 class="library-hours__section-title">
                                  {section.title} <span class="library-hours__floor">{section.floor}</span>
                                </h5>
                                {section.times.map((time, timeIndex) => (
                                  <div class="library-hours__time" key={`${pageIndex}-${sectionIndex}-${timeIndex}`}>
                                    {time.days} <span>{time.hours}</span>
                                  </div>
                                ))}
                              </div>
                            ))}
                          </div>
                        </div>
                      ))
                    }
                  </div>
                </div>

                <!-- 페이지네이션 -->
                <div class="library-hours__pagination">
                  <span class="library-hours__page-info">
                    <span class="library-hours__page-info-current">1</span> / <span class="library-hours__page-info-total">{libraryHours.length}</span>
                  </span>
                  <div class="library-hours__nav">
                    <UiNavButton class="library-hours-autoplay-toggle" direction="stop" size={40} ariaLabel="자동재생 정지" />
                    <UiNavButton class="library-hours-btn-prev" direction="prev" size={40} ariaLabel="이전 이용시간" />
                    <UiNavButton class="library-hours-btn-next" direction="next" size={40} ariaLabel="다음 이용시간" />
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</Layout>
