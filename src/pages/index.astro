                    <div class="calendar__day calendar__day--prev">29</div>
                    <div class="calendar__day calendar__day--prev">30</div>
                    <div class="calendar__day calendar__day--open">1</div>
                    <div class="calendar__day calendar__day--open">2</div>
                    <div class="calendar__day calendar__day--open">3</div>
