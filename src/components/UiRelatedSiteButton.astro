---
export interface Props {
  text?: string;
  iconSrc?: string;
  width?: string;
  height?: string;
  options?: { label: string; url: string }[];
}

const {
  text = '관련사이트 바로가기',
  iconSrc = '/assets/images/icon/icon-arr-right.svg',
  width = '272px',
  height = '56px',
  options = [
    { label: '인천광역시청', url: 'https://www.incheon.go.kr' },
    { label: '연수구청', url: 'https://www.yeonsu.go.kr' },
    { label: '국립중앙도서관', url: 'https://www.nl.go.kr' },
    { label: '한국도서관협회', url: 'https://www.kla.kr' },
    { label: '공공도서관 통합서비스', url: 'https://www.data4library.kr' },
  ],
} = Astro.props;
---

<div class="related-site-dropdown" style={`width: ${width};`}>
  <button
    class="related-site-button"
    type="button"
    style={`width: ${width}; height: ${height};`}
  >
    <span class="related-site-button__text">{text}</span>
    <div class="related-site-button__icon">
      <img src={iconSrc} alt="" />
    </div>
  </button>

  <ul class="related-site-dropdown__menu">
    {
      options.map(option => (
        <li class="related-site-dropdown__item">
          <a
            href={option.url}
            target="_blank"
            rel="noopener noreferrer"
            class="related-site-dropdown__link"
          >
            {option.label}
          </a>
        </li>
      ))
    }
  </ul>
</div>

<style lang="scss">
  .related-site-dropdown {
    position: relative;

    &__menu {
      position: absolute;
      top: 100%;
      left: 0;
      right: 0;
      background: #ffffff;
      border: 1px solid #cdd1d5;
      border-radius: 0 0 8px 8px;
      list-style: none;
      padding: 0;
      margin: 0;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      opacity: 0;
      visibility: hidden;
      transform: translateY(-10px);
      transition: all 0.3s ease;
      z-index: 1000;
    }

    &:hover &__menu {
      opacity: 1;
      visibility: visible;
      transform: translateY(0);
    }

    &__item {
      border-bottom: 1px solid #f0f0f0;

      &:last-child {
        border-bottom: none;
      }
    }

    &__link {
      display: block;
      padding: 12px 24px;
      font-family: 'Pretendard GOV', sans-serif;
      font-size: 15px;
      font-weight: 400;
      line-height: 1.5;
      color: #1e2124;
      text-decoration: none;
      transition: all 0.2s ease;

      &:hover {
        background-color: #f8f9fa;
        color: #3c79c2;
        font-weight: 500;
      }

      &:focus {
        outline: 2px solid #3c79c2;
        outline-offset: -2px;
        background-color: #f8f9fa;
      }
    }
  }

  .related-site-button {
    display: flex;
    flex-direction: row;
    gap: 8px;
    align-items: center;
    justify-content: flex-start;
    padding: 0 24px;
    background: transparent;
    border: 1px solid #cdd1d5;
    border-top: none;
    border-bottom: none;
    cursor: pointer;
    transition: all 0.2s ease;

    &:hover {
      background-color: rgba(60, 121, 194, 0.05);
    }

    &:focus {
      outline: 2px solid #3c79c2;
      outline-offset: 2px;
    }

    &__text {
      font-family: 'Pretendard GOV', sans-serif;
      font-weight: 400;
      font-size: 17px;
      line-height: 1.5;
      color: #1e2124;
      flex-grow: 1;
      text-align: left;
    }

    &__icon {
      width: 20px;
      height: 20px;
      position: relative;
      flex-shrink: 0;
      transition: transform 0.3s ease;

      img {
        display: block;
        max-width: none;
        width: 100%;
        height: 100%;
      }
    }

    .related-site-dropdown:hover & &__icon {
      transform: rotate(90deg);
    }
  }
</style>
