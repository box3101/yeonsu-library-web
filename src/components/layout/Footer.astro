const copyrightLinks = [
  { href: '/privacy-policy', text: '개인정보처리방침', bold: true },
  { href: '#', text: '이용약관' },
  { href: '#', text: '찾아오시는 길' },
];
---

<footer class="footer">
  <div class="footer__content">
    <div class="footer__related-site">
      <div class="inner">
        <UiRelatedSiteButton />
      </div>
    </div>

    <div class="footer__main">
      <div class="footer__main-container">
        <div class="footer__logo">
          <div class="footer__logo-container">
            <img src="/assets/images/logo.svg" alt="연수구립도서관 로고" />
          </div>
        </div>

        <div class="footer__libraries">
          <div class="footer__libraries-column">
            <div class="footer__business-number">
              사업자등록번호: 715-83-00032
            </div>

            <div class="footer__library">
              {
                libraries.map(library => (
                  <div class="footer__library-item">
                    <div class="footer__library-item-name">{library.name}</div>
                    <div class="footer__library-item-details">
                      <div class="footer__library-item-details-text">
                        {library.address}
                      </div>
                      <div class="footer__library-item-details-divider" />
                      <div
                        class={`footer__library-item-details-text ${library.extra ? 'footer__library-item-details-text--medium' : ''}`}
                      >
                        전화: {library.phone}
                      </div>
                      {(library.fax || library.extra) && (
                        <>
                          <div class="footer__library-item-details-divider" />
                          <div
                            class={`footer__library-item-details-text ${library.extra ? 'footer__library-item-details-text--medium' : ''}`}
                          >
                            {library.fax
                              ? `팩스: ${library.fax}`
                              : library.extra}
                          </div>
                        </>
                      )}
                    </div>
                  </div>
                ))
              }
            </div>
          </div>
        </div>
      </div>

      <div class="footer__copyright">
        <div class="footer__copyright-container">
          <div class="footer__copyright-links">
            {
              copyrightLinks.map(link => (
                <a href={link.href} class="footer__copyright-links-button">
                  <div
                    class={`footer__copyright-links-button-text ${link.bold ? 'footer__copyright-links-button-text--bold' : ''}`}
                  >
                    {link.text}
                  </div>
                </a>
              ))
            }
          </div>
          <div class="footer__copyright-text">
            <span>COPYRIGHT(C) 인천연수구립도서관. ALL RIGHT RESERVED.</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>
