    address: '인천광역시 연수구 해돋이로 7',
    phone: '032-749-6710',
    fax: '032-749-6959',
  },
  {
    name: '선학벚빛도서관',
    address: '인천광역시 연수구 봉재산로54번길 30',
    phone: '032-749-6710',
    fax: '032-749-6719',
  },
  {
    name: '동춘나래도서관',
    address: '인천광역시 연수구 봉재산로54번길 30',
    phone: '032-749-8240',
    fax: '032-811-2908',
  },
  {
    name: '함박비류도서관',
    address: '인천광역시 연수구 함박안로 217',
    phone: '032-749-6970',
    fax: '032.749.6979',
  },
