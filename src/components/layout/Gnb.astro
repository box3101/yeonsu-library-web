    // 3depth 메뉴 업데이트 함수
    function updateThirdDepthMenu(menuIndex: number, secondDepthItem: any) {
      const submenu = document.querySelector(`.gnb-sub[data-menu-target="${menuIndex}"]`);
      if (!submenu) return;

      const thirdTitle = submenu.querySelector('[data-third-title]') as HTMLElement;
      const thirdItems = submenu.querySelector('[data-third-items]') as HTMLElement;

      if (thirdTitle && secondDepthItem) {
        thirdTitle.textContent = secondDepthItem.label;
      }

      if (thirdItems && secondDepthItem?.subItems) {
        thirdItems.innerHTML = '';
        secondDepthItem.subItems.forEach((item: any) => {
          const itemDiv = document.createElement('div');
          itemDiv.className = 'gnb-third-item';
          if (item.isSelected) {
            itemDiv.classList.add('selected');
          }

          const link = document.createElement('a');
          link.href = item.href;
          link.className = 'gnb-third-link';

          const bullet = document.createElement('div');
          bullet.className = 'gnb-third-bullet';

          const text = document.createElement('span');
          text.className = 'gnb-third-text';
          text.textContent = item.label;
          // 스타일이 적용되지 않는 경우를 대비해 직접 스타일 적용
          text.style.fontFamily = "'Pretendard GOV', sans-serif";
          text.style.fontSize = '17px';
          text.style.fontWeight = '400';
          text.style.lineHeight = '1.5';
          text.style.color = '#1e2124';

          link.appendChild(bullet);
          link.appendChild(text);
          itemDiv.appendChild(link);
          thirdItems.appendChild(itemDiv);
        });
      }
    }

    gnbItems.forEach((item, index) => {
      const menuIndex = item.getAttribute('data-menu-index');
      const correspondingSub = document.querySelector(`.gnb-sub[data-menu-target="${menuIndex}"]`) as HTMLElement;

      if (!correspondingSub) return;

      // 메인 메뉴 호버
      item.addEventListener('mouseenter', () => {
        if (currentTimeout) {
          clearTimeout(currentTimeout);
          currentTimeout = null;
        }

        // 모든 서브메뉴 숨기기
        gnbSubs.forEach(sub => {
          (sub as HTMLElement).style.opacity = '0';
          (sub as HTMLElement).style.visibility = 'hidden';
          (sub as HTMLElement).style.transform = 'translateY(-10px)';
        });

        // 현재 메뉴의 서브메뉴 보이기
        correspondingSub.style.opacity = '1';
        correspondingSub.style.visibility = 'visible';
        correspondingSub.style.transform = 'translateY(0)';
      });

      // 메인 메뉴에서 나갈 때
      item.addEventListener('mouseleave', (e) => {
        const relatedTarget = e.relatedTarget as Element;

        // 서브메뉴로 이동하지 않는 경우에만 숨기기
        if (!correspondingSub.contains(relatedTarget)) {
          currentTimeout = window.setTimeout(() => {
            correspondingSub.style.opacity = '0';
            correspondingSub.style.visibility = 'hidden';
            correspondingSub.style.transform = 'translateY(-10px)';
          }, 100);
        }
      });

      // 서브메뉴 호버
      correspondingSub.addEventListener('mouseenter', () => {
        if (currentTimeout) {
          clearTimeout(currentTimeout);
          currentTimeout = null;
        }
      });

      // 서브메뉴에서 나갈 때
      correspondingSub.addEventListener('mouseleave', (e) => {
        const relatedTarget = e.relatedTarget as Element;

        // 메인 메뉴로 돌아가지 않는 경우에만 숨기기
        if (!item.contains(relatedTarget)) {
          correspondingSub.style.opacity = '0';
          correspondingSub.style.visibility = 'hidden';
          correspondingSub.style.transform = 'translateY(-10px)';
        }
      });

      // 2depth 메뉴 아이템들에 호버 이벤트 추가 (3depth 메뉴 변경용)
      const menuData_ = menuData[parseInt(menuIndex!)];
      if (menuData_?.type === '3depth') {
        const subItems = correspondingSub.querySelectorAll('.gnb-sub-item');
        subItems.forEach((subItem, subIndex) => {
          subItem.addEventListener('mouseenter', () => {
            const secondDepthItem = menuData_.categories?.[0]?.items?.[subIndex];
            if (secondDepthItem?.subItems) {
              // 2depth 아이템들의 selected 상태 업데이트
              subItems.forEach((item, idx) => {
                if (idx === subIndex) {
                  item.classList.add('selected');
                } else {
                  item.classList.remove('selected');
                }
              });

              updateThirdDepthMenu(parseInt(menuIndex!), secondDepthItem);
            }
          });
        });

        // 초기 로드 시 선택된 2depth 항목의 3depth 메뉴 표시
        const selectedSubIndex = menuData_.categories?.[0]?.items?.findIndex((item: any) => item.isSelected) || 0;
        const selectedSecondDepthItem = menuData_.categories?.[0]?.items?.[selectedSubIndex];
        if (selectedSecondDepthItem?.subItems) {
          // 페이지 로드 후 약간의 지연을 두고 실행
          setTimeout(() => {
            updateThirdDepthMenu(parseInt(menuIndex!), selectedSecondDepthItem);
          }, 50);
        }
      }
    });

    // 전체 GNB 영역 벗어나면 모든 서브메뉴 숨기기
