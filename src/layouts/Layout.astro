---
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
// import '../styles/main.scss';
---

<html>
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

		<!-- 보안 관련 메타 태그 -->
		<meta http-equiv="X-Content-Type-Options" content="nosniff" />
		<meta http-equiv="X-Frame-Options" content="DENY" />
		<meta http-equiv="X-XSS-Protection" content="1; mode=block" />
		<meta http-equiv="Referrer-Policy" content="strict-origin-when-cross-origin" />

		<!-- swiper -->
		<link rel="stylesheet" href="./assets/css/vendor/swiper.css" />
		<!-- aos -->
		<link rel="stylesheet" href="./assets/css/vendor/aos.css" />
		<!-- main -->
		<link rel="stylesheet" href="./assets/css/main.css" />
		<!-- 개발자 스타일 -->
		<link rel="stylesheet" href="./assets/css/custom.css" />
		<title>연수구립도서관</title>
	</head>
	<body>
		<!-- 스킵 링크 (접근성) -->
		<a href="#main-content" class="skip-link">주요 콘텐츠로 바로가기</a>
		<Header />
		<main id="main-content">
			<slot />
		</main>
		<Footer />

		<!-- VENDOR -->
		<script is:inline type="text/javascript" src="./assets/js/vendor/jquery.js"></script>
		<script is:inline type="text/javascript" src="./assets/js/vendor/swiper-bundle.min.js"></script>
		<script is:inline type="text/javascript" src="./assets/js/vendor/aos.js"></script>
		<script is:inline type="text/javascript" src="./assets/js/vendor/chat.js"></script>

		<!-- 기능별 스크립트들 -->
		<script is:inline type="text/javascript" src="./assets/js/wordcloud2.js"></script>
		<script is:inline type="text/javascript" src="./assets/js/comAccordian.js"></script>
		<script is:inline type="text/javascript" src="./assets/js/comTab.js"></script>
		<script is:inline type="text/javascript" src="./assets/js/collectAccordion.js"></script>
		<script is:inline type="text/javascript" src="./assets/js/swiper.js"></script>
		<script is:inline type="text/javascript" src="./assets/js/collection.js"></script>
		<script is:inline type="text/javascript" src="./assets/js/collectionModal.js"></script>
		<script is:inline type="text/javascript" src="./assets/js/comGnb.js"></script>
		<script is:inline type="text/javascript" src="./assets/js/leftMenu.js"></script>
		<script is:inline type="text/javascript" src="./assets/js/modal.js"></script>

		<!-- 메인 -->
		<script is:inline type="text/javascript" src="./assets/js/main/searchTab.js"></script>

		<!-- 서브 -->
		<script is:inline type="text/javascript" src="./assets/js/sub/filter.js"></script>

		<script is:inline>
			document.addEventListener('DOMContentLoaded', function () {
				AOS.init({
					duration: 600, // 자연스러운 지속 시간 (600ms)
					easing: 'ease-out-cubic', // 부드러운 이징
					once: true, // 한 번만 애니메이션 실행
					offset: 80, // 트리거 지점 (80px 전에 시작)
					delay: 0, // 지연 시간 없음
					disable: false, // 모든 기기에서 활성화
					startEvent: 'DOMContentLoaded', // DOM 로드 후 시작
				});
			});
		</script>
	</body>
</html>
