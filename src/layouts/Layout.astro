---
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import '../styles/main.scss';
---

<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <!-- Pretendard 폰트 CDN -->
    <link rel="preconnect" href="https://cdn.jsdelivr.net" />
    <link rel="stylesheet" as="style" crossorigin href="https://cdn.jsdelivr.net/gh/orioncactus/pretendard@v1.3.9/dist/web/variable/pretendardvariable.min.css" />
    <!-- Pretendard 폰트 CDN EEE -->

    <!-- MAIN.CSS -->
    <link rel="stylesheet" href="./assets/css/main.css" />
    <!-- MAIN.CSS EEE-->

    <title>연수구립도서관</title>

    <!-- swiper CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
    <!-- aos CDN -->
    <link rel="stylesheet" href="https://unpkg.com/aos@2.3.1/dist/aos.css" />
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />

    <!-- SWIPER CDN -->
    <script defer src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <!-- AOS CDN -->
    <script defer src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>

    <!-- LibraryCommon 전역 객체 먼저 로드 -->
    <script is:inline type="text/javascript" src="./assets/js/common.js"></script>

    <!-- 기능별 스크립트들 -->
    <script is:inline type="text/javascript" src="./assets/js/comAccordian.js"></script>
    <script is:inline type="text/javascript" src="./assets/js/comTab.js"></script>
    <script is:inline type="text/javascript" src="./assets/js/collectAccordion.js"></script>
    <script is:inline type="text/javascript" src="./assets/js/swiper.js"></script>
    <script is:inline type="text/javascript" src="./assets/js/collection.js"></script>
    <script is:inline type="text/javascript" src="./assets/js/collectionModal.js"></script>
    <script is:inline type="text/javascript" src="./assets/js/comGnb.js"></script>

    <script is:inline>
      document.addEventListener('DOMContentLoaded', function () {
        AOS.init({
          duration: 600, // 자연스러운 지속 시간 (600ms)
          easing: 'ease-out-cubic', // 부드러운 이징
          once: true, // 한 번만 애니메이션 실행
          offset: 80, // 트리거 지점 (80px 전에 시작)
          delay: 0, // 지연 시간 없음
          disable: false, // 모든 기기에서 활성화
          startEvent: 'DOMContentLoaded', // DOM 로드 후 시작
        });
      });
    </script>
  </body>
</html>
