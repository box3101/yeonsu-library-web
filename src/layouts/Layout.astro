---
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import '../styles/main.scss';

// 전역 컴포넌트 import
import UiButton from '@ui/UiButton.astro';
import UiRadio from '@ui/UiRadio.astro';
import UiSelect from '@ui/UiSelect.astro';
import UiNavButton from '@ui/UiNavButton.astro';
import UiTab from '@ui/UiTab.astro';

// 전역 등록
if (typeof globalThis !== 'undefined') {
  globalThis.UiButton = UiButton;
  globalThis.UiRadio = UiRadio;
  globalThis.UiSelect = UiSelect;
  globalThis.UiNavButton = UiNavButton;
  globalThis.UiTab = UiTab;
}
---

<html>
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"
    />
    <!-- Pretendard 폰트 CDN -->
    <link rel="preconnect" href="https://cdn.jsdelivr.net" />
    <link
      rel="stylesheet"
      as="style"
      crossorigin
      href="https://cdn.jsdelivr.net/gh/orioncactus/pretendard@v1.3.9/dist/web/variable/pretendardvariable.min.css"
    />
    <!-- <link rel="stylesheet" href="./assets/css/main.css" /> -->
    <title>Astro Basics</title>

    <!-- Swiper CDN - 최신 11.x 버전으로 업데이트 -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"
    />

    <!-- AOS (Animate On Scroll) CDN -->
    <link rel="stylesheet" href="https://unpkg.com/aos@2.3.1/dist/aos.css" />
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />

    <!-- JavaScript 로딩 - 최신 11.x 버전으로 업데이트 -->
    <script
      src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"
      onload="console.log('Swiper 11.x CDN loaded successfully')"
      onerror="console.error('Failed to load Swiper CDN')"></script>

    <!-- AOS JavaScript - index 페이지에서만 로드 -->
    <script
      src="https://unpkg.com/aos@2.3.1/dist/aos.js"
      onload="console.log('AOS loaded successfully')"
      onerror="console.error('Failed to load AOS')"></script>

    <script is:inline type="text/javascript" src="./assets/js/common.js"
    ></script>
    <script is:inline type="text/javascript" src="./assets/js/accordion.js"
    ></script>
    <script is:inline type="text/javascript" src="./assets/js/tab.js"></script>
    <script is:inline type="text/javascript" src="./assets/js/swiper.js"
    ></script>
    <script is:inline type="text/javascript" src="./assets/js/collection.js"
    ></script>
    <script is:inline type="text/javascript" src="./assets/js/filter.js"
    ></script>
    <script is:inline type="text/javascript" src="./assets/js/modal.js"
    ></script>
    <script is:inline type="text/javascript" src="./assets/js/keyboard.js"
    ></script>
    <script is:inline type="text/javascript" src="./assets/js/search-tabs.js"
    ></script>
    <script is:inline src="/assets/js/mobile-menu.js"></script>

    <!-- AOS 초기화 - index 페이지에서만 작동 -->
    <script>
      document.addEventListener('DOMContentLoaded', function () {
        AOS.init({
          duration: 600, // 자연스러운 지속 시간 (600ms)
          easing: 'ease-out-cubic', // 부드러운 이징
          once: true, // 한 번만 애니메이션 실행
          offset: 80, // 트리거 지점 (80px 전에 시작)
          delay: 0, // 지연 시간 없음
          disable: false, // 모든 기기에서 활성화
          startEvent: 'DOMContentLoaded', // DOM 로드 후 시작
        });
      });
    </script>
  </body>
</html>
