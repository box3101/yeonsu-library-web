---
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';

import '../styles/sub.scss';
---

<html>
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

		<!-- 보안 관련 메타 태그 -->
		<meta http-equiv="X-Content-Type-Options" content="nosniff" />
		<meta http-equiv="X-Frame-Options" content="DENY" />
		<meta http-equiv="X-XSS-Protection" content="1; mode=block" />
		<meta http-equiv="Referrer-Policy" content="strict-origin-when-cross-origin" />

		<link rel="preload" href="./assets/fonts/PretendardGOV-Regular.woff2" as="font" type="font/woff2" crossorigin />
		<link rel="preload" href="./assets/fonts/PretendardGOV-Bold.woff2" as="font" type="font/woff2" crossorigin />

		<!-- swiper -->
		<link rel="stylesheet" href="./assets/css/vendor/swiper.css" />
		<!-- aos -->
		<link rel="stylesheet" href="./assets/css/vendor/aos.css" />
		<!-- 1. 기본 스타일 (폰트, 변수, 리셋) - 최우선 -->
		<link rel="stylesheet" href="./assets/css/base.css" />

		<!-- 2. 유틸리티 클래스 (spacing, width, flex 등) -->
		<link rel="stylesheet" href="./assets/css/utilities.css" />

		<!-- 3. 헤더 -->
		<link rel="stylesheet" href="./assets/css/header.css" />

		<!-- 4. 푸터 -->
		<link rel="stylesheet" href="./assets/css/footer.css" />

		<!-- 5. 서브 페이지 스타일  -->
		<link rel="stylesheet" href="./assets/css/sub.css" />

		<!-- 6. 공통 컴포넌트 (모든 UI 컴포넌트 통합) -->
		<link rel="stylesheet" href="./assets/css/components.css" />

		<!-- 7. 메인 스타일 -->
		<link rel="stylesheet" href="./assets/css/home.css" />

		<!-- 개발자 스타일 -->
		<link rel="stylesheet" href="./assets/css/custom.css" />
		<title>연수구립도서관</title>
	</head>
	<body>
		<!-- 스킵 링크 (접근성) -->
		<a href="#main-content" class="skip-link">주요 콘텐츠로 바로가기</a>
		<Header />
		<main id="main-content">
			<slot />
		</main>
		<Footer />
		<div class="mobileCard"><a href="./모바일회원증">모바일 회원증</a></div>

		<!-- VENDOR -->
		<script is:inline type="text/javascript" src="./assets/js/vendor/jquery.js"></script>
		<script is:inline type="text/javascript" src="./assets/js/vendor/swiper-bundle.min.js"></script>
		<script is:inline type="text/javascript" src="./assets/js/vendor/aos.js"></script>
		<script is:inline type="text/javascript" src="./assets/js/vendor/chat.js"></script>

		<!-- 기능별 스크립트들 -->
		<script is:inline type="text/javascript" src="./assets/js/wordcloud2.js"></script>
		<script is:inline type="text/javascript" src="./assets/js/comAccordian.js"></script>
		<script is:inline type="text/javascript" src="./assets/js/comTab.js"></script>
		<script is:inline type="text/javascript" src="./assets/js/collectAccordion.js"></script>
		<script is:inline type="text/javascript" src="./assets/js/noticePagination.js"></script>
		<script is:inline type="text/javascript" src="./assets/js/collection.js"></script>
		<script is:inline type="text/javascript" src="./assets/js/collectionModal.js"></script>
		<script is:inline type="text/javascript" src="./assets/js/comGnb.js"></script>
		<script is:inline type="text/javascript" src="./assets/js/leftMenu.js"></script>
		<script is:inline type="text/javascript" src="./assets/js/modal.js"></script>
		<!-- TODO 20250925: faq.js -->
		<script is:inline type="text/javascript" src="./assets/js/faq.js"></script>

		<!-- TODO 20251005: swiper.js,  eventPagination.js, programPagination.js, libraryMap.js -->
		<!-- 기존 swiper 에서 메인 AI 책큐 추천 슬라이더 추가   -->
		<script is:inline type="text/javascript" src="./assets/js/swiper.js"></script>
		<!-- 메인 이벤트 페이징 -->
		<script is:inline type="text/javascript" src="./assets/js/eventPagination.js"></script>
		<!-- 메인 프로그램 페이징 -->
		<script is:inline type="text/javascript" src="./assets/js/programPagination.js"></script>
		<!-- 메인 영화 페이징 -->
		<script is:inline type="text/javascript" src="./assets/js/moviePagination.js"></script>
		<!-- 메인 도서관 지도 -->
		<script is:inline type="text/javascript" src="./assets/js/libraryMap.js"></script>

		<!-- 메인 -->
		<script is:inline type="text/javascript" src="./assets/js/main/searchTab.js"></script>

		<!-- 서브 -->
		<script is:inline type="text/javascript" src="./assets/js/sub/filter.js"></script>

		<!-- TODO 20251005: aos 이벤트 변경 -->
		<script is:inline>
			window.addEventListener('load', function () {
				AOS.init({
					duration: 600, // 자연스러운 지속 시간 (600ms)
					easing: 'ease-out-cubic', // 부드러운 이징
					once: true, // 한 번만 애니메이션 실행
					offset: 120, // 트리거 지점 (120px 전에 시작)
					delay: 0, // 지연 시간 없음
					disable: false, // 모든 기기에서 활성화
				});

				// AOS 강제 리프레시
				setTimeout(function () {
					AOS.refresh();
				}, 100);
			});
		</script>
	</body>
</html>
