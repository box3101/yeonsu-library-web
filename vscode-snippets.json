{
  "Import UI Components": {
    "prefix": "ui-import",
    "body": ["import { UiRadio$1 } from '@components';"],
    "description": "UI 컴포넌트 한 번에 import"
  },

  "UiRadio Component": {
    "prefix": "ui-radio",
    "body": [
      "<UiRadio",
      "  name=\"$1\"",
      "  value=\"$2\"",
      "  size=\"${3|medium,large|}\"",
      "  ${4:checked}",
      "  label=\"$5\"",
      "  description=\"$6\"",
      "/>"
    ],
    "description": "UiRadio 컴포넌트 자동 완성"
  },

  "Radio Group": {
    "prefix": "radio-group",
    "body": [
      "<div class=\"radio-group\">",
      "  <UiRadio name=\"$1\" value=\"option1\" label=\"$2\" />",
      "  <UiRadio name=\"$1\" value=\"option2\" label=\"$3\" />",
      "</div>"
    ],
    "description": "라디오 그룹 자동 생성"
  }
}
