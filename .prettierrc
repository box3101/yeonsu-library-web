{
  "printWidth": 150,
  "tabWidth": 4,
  "useTabs": true,
  "singleQuote": true,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "avoid",
  "htmlWhitespaceSensitivity": "ignore",
  "proseWrap": "preserve",
  "endOfLine": "lf",
  "plugins": [
    "prettier-plugin-astro"
  ],
  "overrides": [
    {
      "files": "*.astro",
      "options": {
        "parser": "astro",
        "printWidth": 150,
        "htmlWhitespaceSensitivity": "ignore"
      }
    },
    {
      "files": "*.html",
      "options": {
        "printWidth": 150,
        "htmlWhitespaceSensitivity": "ignore",
        "bracketSameLine": false
      }
    }
  ]
}