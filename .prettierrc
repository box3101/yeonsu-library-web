{
  "printWidth": 150,
  "tabWidth": 2,
  "useTabs": false,
  "singleQuote": true,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "avoid",
  "htmlWhitespaceSensitivity": "css",
  "proseWrap": "preserve",
  "endOfLine": "lf",
  "plugins": ["prettier-plugin-astro"],
  "overrides": [
    {
      "files": "*.astro",
      "options": {
        "parser": "astro",
        "printWidth": 150,
        "htmlWhitespaceSensitivity": "css"
      }
    },
    {
      "files": "*.html",
      "options": {
        "printWidth": 150,
        "htmlWhitespaceSensitivity": "strict",
        "bracketSameLine": false
      }
    }
  ]
}
